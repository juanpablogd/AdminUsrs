@model NSPecor.Models.MUB_ESTADO_SUB

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ESTADO SUBESTACIÓN</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID_ESTADO_SUB)

        <div class="form-group">
            @Html.LabelFor(model => model.NOM_ESTADO_SUB, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOM_ESTADO_SUB)
                @Html.ValidationMessageFor(model => model.NOM_ESTADO_SUB)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ACTIVO, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ACTIVO, new SelectList(
                                                                          new List<Object>{
                                                                               new { value = "S" , text = "SI"  },
                                                                               new { value = "N" , text = "NO" }
                                                                            },
                                                                          "value",
                                                                          "text")
                            , htmlAttributes: new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.ACTIVO)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Ver Listado", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
